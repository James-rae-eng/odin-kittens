<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<h1><%= @kitten.name %></h1>

<p><%= @kitten.age %></p>
<p><%= @kitten.cuteness %></p>
<p><%= @kitten.softness %></p>

<ul>
  <li><%= link_to "Edit", edit_kitten_path(@kitten) %></li>
  <li><%= link_to "Destroy", kitten_path(@kitten), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "Home", root_path %></li>
</ul>
